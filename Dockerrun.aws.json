{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "_backend",
      "host": {
        "sourcePath": "/var/app/current/backend"
      }
    },
    {
      "name": "_staticfiles",
      "host": {
        "sourcePath": "/var/app/current/backend/static"
      }
    }, 
    {
      "name": "_config_template",
      "host": {
        "sourcePath": "/var/app/current/nginx-config-files/app.nginx.template"
      }
    },
    {
      "name": "_nginx_conf",
      "host": {
        "sourcePath": "/var/app/current/nginx-config-files/nginx.conf"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "fastapi",
      "image": "jrtec/fastapi-chat-backend",
      "essential": true,
      "memory": 450,
      "command": [
        "sh",
        "-c",
        "uvicorn app.main:app --reload --workers 1 --host 0.0.0.0 --port 8000"
      ],      
      "mountPoints": [
        {
          "sourceVolume": "_backend",
          "containerPath": "/code"
        }
      ]          
    },
    {
      "name": "nginx",
      "image": "nginx:1.19.10",
      "essential": true,
      "memory": 150,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        }
      ],
      "links": [
        "fastapi"
      ],
      "mountPoints": [
        {
          "sourceVolume": "_config_template",
          "containerPath": "/etc/nginx/templates/app.nginx.template"
        },
        {
          "sourceVolume": "_nginx_conf",
          "containerPath": "/etc/nginx/nginx.conf",
          "readOnly": true
        },
        {
          "sourceVolume": "_staticfiles",
          "containerPath": "/code/staticfiles",
          "readOnly": true
        }                
      ]
    }           
  ]
}